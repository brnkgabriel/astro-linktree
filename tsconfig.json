{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": ["src"],
      "@/*":["src/*"],
      "@/components": ["src/components"],
      "@/components/*": ["src/components/*"],
      "@/pages": ["src/pages"],
      "@/pages/*": ["src/pages/*"],
      "@/layouts": ["src/layouts"],
      "@/layouts/*": ["src/layouts/*"],
      "@/styles": ["src/styles"],
      "@/styles/*": ["src/styles/*"]
    }
  }
}
